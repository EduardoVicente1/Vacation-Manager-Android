<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentHome"
    android:background="@drawable/background_splash_screen"
    android:alpha="0.8">

    <TextView
        android:id="@+id/tx_cal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Aqui va el Calendar"
        android:textSize="90px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="#FFFF32"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Aqui va el Recycler"
        android:textSize="90px"
        android:background="#294820"
        app:layout_constraintStart_toStartOf="@id/tx_cal"
        app:layout_constraintEnd_toEndOf="@id/tx_cal"
        app:layout_constraintTop_toBottomOf="@id/tx_cal"
        android:layout_marginTop="60dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>