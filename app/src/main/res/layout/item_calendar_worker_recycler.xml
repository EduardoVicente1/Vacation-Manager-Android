<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_calendar_worker_recycler"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardv_item_work"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/img_calendar_worker_color"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#00FFA6"
            />
        <TextView
            android:id="@+id/calendar_worker_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itau"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/calendar_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcelo Arguello"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/calendar_worker_fecha_ini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio: dd/mm"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/calendar_worker_fecha_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fin: dd/mm"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>